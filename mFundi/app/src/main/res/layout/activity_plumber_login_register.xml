<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    tools:context=".PlumberLoginRegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/plumberStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plumber Login"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#006B38"
            android:textColorHint="#006B38"
            />

        <EditText
            android:id="@+id/plumberLoginRegisterEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter email.."
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#006B38"
            android:textStyle="bold"
            android:textSize="20sp"
            android:drawablePadding="5dp"
            android:textColorHint="#006B38"
            />

        <EditText
            android:id="@+id/plumberLoginRegisterPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColorHint="#006B38"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:hint="Enter password.."
            android:textColor="#006B38"
            android:drawablePadding="10dp"
            />

        <Button
            android:id="@+id/plumberLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="#006B38"
            />

        <TextView
            android:id="@+id/plumberLoginPageQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#006B38"
            android:text="Don't have an account? Register HERE"
            android:gravity="center"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/plumberRegisterBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:visibility="invisible"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="#006B38"
            />

        <TextView
            android:id="@+id/plumberRegisterPageQuestion"
            android:textStyle="bold"
            android:textColor="#006B38"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Have an account? Login HERE"
            android:gravity="center"
            />

    </LinearLayout>

</ScrollView>